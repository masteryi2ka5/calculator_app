<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMath"
            android:layout_weight="1"
            android:minHeight="64dp"
            android:gravity="right|center_vertical"
            android:text="0"
            android:textSize="28dp"
            android:background="@drawable/layout_rim"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvResult"
            android:layout_weight="1"
            android:minHeight="64dp"
            android:gravity="right|center_vertical"
            android:text="0"
            android:textSize="28dp"
            android:background="@drawable/layout_rim"
            android:padding="5dp"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnC"
            android:text="C"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnOpen"
            android:text="("
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnClose"
            android:text=")"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnDiv"
            android:text="/"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnMul"
            android:text="*"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnAbs"
            android:text="-"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnAdd"
            android:text="+"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnSign"
            android:text="+/-"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn0"
            android:text="0"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnDot"
            android:text="."
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnEqual"
            android:text="="
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>

</LinearLayout>